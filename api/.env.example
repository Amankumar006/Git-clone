# Medium Clone API Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=medium_clone
DB_USER=root
DB_PASS=

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# File Upload Configuration
# For development: relative path
UPLOAD_PATH=../uploads/
# For production: absolute path outside web root (recommended)
# UPLOAD_PATH=/var/storage/medium-clone/uploads/
MAX_UPLOAD_SIZE=5242880

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application URLs
API_BASE_URL=http://localhost/medium-clone/api
FRONTEND_URL=http://localhost:3000